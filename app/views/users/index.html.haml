- @title = 'Listing Users'
%div.row
  %div.col-xs-8.col-xs-offset-2
    %table.table
      %thead
        %tr
          %th Name
          %th Email
          %th Phone
          %th
          %th
          %th

      %tbody
        - @users.each do |user|
          %tr.index-spacer
            %td{colspan: "6"}
          %tr
            %td= user.name
            %td= user.email
            %td= user.phone
            %td= link_to 'Show', user
            %td= link_to 'Edit', edit_user_path(user)
            %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
          - if user.apt_number.present? || user.street.present? || user.city.present? || user.zip_code.present?
            %tr
              %td= user.apt_number
              %td{colspan: "2"}= user.street
              %td= user.city
              %td= user.state
              %td= user.zip_code
        %tr.index-spacer
          %td{colspan: "6"}
