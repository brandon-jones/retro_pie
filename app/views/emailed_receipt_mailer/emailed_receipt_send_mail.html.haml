%h2
  Hello #{@user.name} here is your receipt/updated status
%hr
= render partial: 'users/verify'
- @user.orders.each do |order|
  %h3 Status
  =order.status.name
  %br
  = render partial: 'orders/verify', locals: { order: order }
  - order.payments.each do |payment|
    = render partial: 'payments/verify', locals: {payment: payment}