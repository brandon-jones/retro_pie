-if category.count == 1 && category.count > 0
  =category[0].title
-elsif category.count > 0
  .dropdown
    %a#dLabel{"aria-expanded" => "false", "aria-haspopup" => "true", "data-target" => "#", "data-toggle" => "dropdown", :href => "", :role => "button"}
      =category[0].title
      %img{:alt => "#{category[0].title}", :src => "#{category[0].image_url}", :style => "width:50px;height:50px", :class => 'pull-right'}/
    -if category.count > 1
      %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
        -category.each_with_index do |cat,index|
          -unless index==0
            =render :partial => "custom_dropdown_element", locals: { category: cat }